<!-- 头部 -->
<view class='i-header'>
  <view class="h-left">
    <navigator url="../index/index" class="iconfont icon-zuojiantou"></navigator>
    <view class="l_qiye">服务商</view>
  </view>
  <view class="h-bottom">
    <navigator url='../search/search' class='search-cont s-nosearch-wrap'>
      <view class='search search-nosearch company-bColor-1'>一级建造师</view>
      <image class="search-icon" src='../../../static/images/public/search_icon.png'></image>
    </navigator>
  </view>
</view>
<!-- 头部 -->
<!-- 筛选 -->
<view class="newest-search">
  <view class="n-xiahuaxian">
    <view class="newest">
      <view class="province">
        <view>{{city.area_name}} — {{area.area_name}}　|　建筑　|　国企</view>
      </view>
    </view>
    <view class="n-search">
      <view class="newsite_button active" bindtap="selectDistrict">
        <view class="newsite_view subtitle-msg  active">地点</view>
        <icon class="iconfont icon-zhcc_xiangxiajiantou"></icon>
      </view>
      <navigator class="newsite_button  active" url="../ScreeningConditions/ScreeningConditions">
        <view class="newsite_view subtitle-msg  ">更多</view>
        <icon class="iconfont icon-zhcc_xiangxiajiantou"></icon>
      </navigator>
    </view>
  </view>
</view>
<!-- 筛选 -->
<!-- 数据展示 -->
<view class="inner">
  <view class="container">
    <view class="content-list">
      <navigator url="../../postionDetail/postionDetail?id={{item.id}}" wx:for="{{recList.recruit_hot}}" wx:key>
        <view class='c-l-info'>
          <image src='{{item.logo}}' class="c-logo" />
          <view class='c-info-text'>
            <text class='c-info-title'>{{item.title}}</text>
            <view class='c-info-msg'>
              <text class='c-msg'>建筑</text>
              <text class='c-msg'>水利水电</text>
            </view>
            <view class='company-status'>广州 — 海珠区</view>
          </view>
        </view>
        <!-- company info start -->
        <view class='company-info'>
          <image class="ci_img"></image>
          <view class="ci_zuixin">最新招聘•安全员等21个职位</view>
        </view>
      </navigator>
    </view>
  </view>
</view>
<!-- 数据展示 -->
