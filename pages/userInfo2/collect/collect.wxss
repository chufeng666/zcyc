.inner_top {
  display: flex;
  align-items: center;
  margin: 0 31rpx;
  border-bottom: 1rpx solid #dedede;
  border-top: 1rpx solid #dedede;
}

.name {
  flex: 2;
  padding: 31rpx 0;
}

.name_company {
  position: relative;
  text-align: center;
  color: #686868;
  font-size: 30rpx;
}
.name_company_active{
  color: #EE291A;
  font-weight: bold;
}
.active {
  position: absolute;
  right: 134rpx;
  bottom: -30rpx;
  width: 89rpx;
  height: 4rpx;
  background-color: var(--themeColor);
  text-align: center;
}
/* 数据展示 */

.inner {
  padding: 0;
  margin-bottom: 120rpx;
}

.container {}

.content-list {
  padding: 33rpx 32rpx;
  border-bottom: 16rpx solid #dedede;
}

.c-l-info {
  display: flex;
}

.c-logo {
  width: 140rpx;
  height: 140rpx;
  border-radius: 10rpx;
}

.c-info-text {
  margin-left: 24rpx;
}

.c-info-title {
  font-size: 36rpx;
  color: #262626;
  font-weight: 600;
}

.c-info-msg {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content: space-around;
  font-size: 28rpx;
  color: #fff;
  margin-top: 12rpx;
}

.c-msg {
  background-color: var(--themeColor);
  padding: 4rpx 16rpx;
  border-radius: 10rpx;
  margin-right: 16rpx;
}

.company-status {
  margin-top: 14rpx;
  font-size: 26rpx;
  color: #686868;
  font-weight: 500;
}

.company-info {
  display: flex;
  font-size: 24rpx;
  color: #262626;
  margin-top: 16rpx;
}

.ci_img {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.ci_zuixin {
  padding-top: 5rpx;
}

/* 数据展示 */
.n-zhaopinxinxi {
  margin-bottom: 95rpx;
}

.c_info {
  padding: 32rpx 30rpx;
  border-bottom: 10px solid #dedede;
}

.c_info .i_list {
  display: flex;
  justify-content: space-between;
  align-content: center;
}

.c_info .i_list .l_yuan {
  font-size: 34rpx;
  font-weight: 550;
  color: #000;
}

.c_info .i_list .l_price {
  color: var(--themeColor);
  font-weight: 600;
  font-size: 32rpx;
}

.c_info .i_second {
  display: flex;
  margin-top: 14rpx;
}

.c_info .i_second view {
  color: #fff;
  font-size: 24rpx;
  font-weight: normal;
  background-color: var(--themeColor);
  padding: 6rpx 15rpx;
  border-radius: 4rpx;
}

.c_info .i_second view:nth-child(2) {
  margin-left: 15rpx;
}

.c_info .i_third {
  color: #686868;
  font-size: 26rpx;
  display: flex;
  margin-top: 10rpx;
}

.c_info .i_third .t_zhili {
  margin: 0 28rpx;
}

.c_info .i_fourth {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  margin-top: 11rpx;
}

.c_info .i_fourth .f_logo {
  background-color: goldenrod;
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
}

.c_info .i_fourth .f_zhiwei {
  display: -webkit-box;
  overflow: hidden;
  white-space: normal !important;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  color: #262626;
  margin-left: 20rpx;
}

.c_info .i_fourth .f_gongsi {
  display: -webkit-box;
  overflow: hidden;
  white-space: normal !important;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  color: #969696;
  margin-left: 30rpx;
}