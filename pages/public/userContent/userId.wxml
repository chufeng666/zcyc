<view class="inner">
  <view class="userId_header">
    <text class="name_size">证件类型</text>
    <view class="us_hd_id">
      <text>身份证</text>
      <text class="iconfont  icon-iconcopy">审核成功后不可修改</text>
    </view>
  </view>
  <view class="userId_header">
    <view class="us_hd_zjh">
      <text class="name_size">证件类型</text>
      <text class="bitian">必填</text>
    </view>
    <view class="us_hd_id">
      <input class="us_hd_id_num" bindinput="inputIdcard" placeholder="请填写身份证号码" value="{{idcard}}" />
    </view>
  </view>
  <view class="userId_main">
    <text class="iconfont  icon-iconcopy">身份证照片可根据自己意愿填写</text>
    <view class="userId_img_zheng">
      <image mode="aspectFit" wx:if="{{idcard_back===''}}" bindtap="addIdCardPic1" class="userId_img" src="../../../static/images/bar_icon/user/edit/shengfengzheng_zhnegmian.png" />
      <image mode="aspectFit" wx:else bindtap="addIdCardPic1" class="userId_img" src="{{idcard_back}}" />
    </view>
    <view class="userId_img_fan">
      <image mode="aspectFit" wx:if="{{idcard_front===''}}" bindtap="addIdCardPic2" class="userId_img" src="../../../static/images/bar_icon/user/edit/shengfengzheng_beimian.png" />
      <image mode="aspectFit" wx:else bindtap="addIdCardPic2" class="userId_img" src="{{idcard_front}}" />
    </view>
    <button class="userId_bt" bindtap="initUserInfoFive">确定上传</button>
  </view>
</view>