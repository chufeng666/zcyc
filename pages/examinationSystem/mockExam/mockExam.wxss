/* 题目数量 */
.main {
  display: flex;
  align-items: center;
}

.rigth {
  flex: 8;
}

/* 自定义弹窗 */
.zan-dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: #333;
  /* //设置阴影半透明背景如： background: rgba(0, 0, 0, 0.4); */
  opacity: 0.8;
  display: none;
}

.zan-dialog__container {
  position: fixed;
  bottom: 40%;
  margin: 0 76rpx;
  width: 460rpx;
  /* //弹窗布局宽 */
  height: 172rpx;
  /* //弹窗布局高，与下面弹出距离transform有关/ */
  background: #f8f8f8;
  transform: translateY(300%);
  /* //弹框弹出距离，与弹框布局高度有关，如300%表示弹起距离为3倍弹窗高度 */
  transition: all 0.4s ease;
  z-index: 12;
  /* box-shadow: 0px 3px 3px 2px gainsboro; //弹框的悬浮阴影效果，如不需要可注释该行 */
  padding: 63rpx 68rpx 72rpx 68rpx;
}

.zan-dialog--show .zan-dialog__container {
  transform: translateY(0);
}

.zan-dialog--show .zan-dialog__container .top {
  font-size: 36rpx;
  font-weight: bold;
  color: #393939;
}

.zan-dialog--show .zan-dialog__container .middle {
  margin-top: 22rpx;
  margin-bottom: 57rpx;
  font-size: 24rpx;
  color: var(--themeColor);
}

.zan-dialog--show .zan-dialog__container .bt {
  display: flex;
  align-items: center;

}

.zan-dialog--show .zan-dialog__container .bt button {
  font-size: 26rpx;
  color: #959595;
  margin: 0;
}

.zan-dialog--show .zan-dialog__mask {
  display: block;
}

