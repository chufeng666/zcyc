/* 轮播 */
.scroll-wrapper {
  white-space: nowrap;
  -webkit-overflow-scrolling: touch;
  background: #FFF;
  height: 128rpx;
  line-height: 128rpx;
  box-sizing: border-box;
  padding-left: 28rpx;
  border-bottom: 1rpx solid #dedede;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.navigate-item {
  display: inline-block;
  text-align: center;
  height: 56rpx;
  line-height: 56rpx;
  background-color: #F0F0F0;
  border-radius: 28rpx;
  margin-right: 18rpx;
  padding: 0 26rpx;
}

.names {
  font-size: 28rpx;
}

.active {
  color: #fff;
  background-color: var(--themeColor);
}

