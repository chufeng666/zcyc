/* 头部 */

.i-header {
  height: 222rpx;
  background-color: var(--themeColor);
  line-height: 104rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding: 0 32rpx;
}

.i-header .h-left {
  color: #fff;
  font-weight: 500;
  padding-top: 40rpx;
  display: flex;
  align-items: center;
}

.i-header .h-left .icon-zuojiantou {
  font-size: 50rpx;
}

.i-header .h-left .l_qiye {
  font-size: 37rpx;
}

.i-header .h-bottom {
  display: flex;
  align-items: center;
  height: 56rpx;
  line-height: 56rpx;
  background-color: #fff;
  border-radius: 28rpx;
}

.search-nosearch {
  width: 100%;
  font-size: 24rpx;
  color: #999;
  margin-left: 16rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 26rpx;
}

/* 头部 */
/* 选项 */
.option {
  margin-top: 222rpx;
  height: 212rpx;
  padding: 0 32rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-bottom: 16rpx solid #dedede;
}

.op_experience {
  width: 148rpx;
  height: 148rpx;
  text-align: center;
  border-radius: 16rpx;
  box-shadow: 0 0 6rpx 6rpx #E4E4E4;
}

.op_experience:nth-child(2) {
  display: flex;
  flex-direction: column;
}

.op_experience:nth-child(3) {
  display: flex;
  flex-direction: column;
}

.op_experience:nth-child(4) {
  display: flex;
  flex-direction: column;
}

