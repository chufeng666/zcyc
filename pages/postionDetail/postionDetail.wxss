@import '../template/common';

#wrap {
  background: #fff;
  font-size: 26rpx;
  width: 100%;
  min-height: 100%;
}

/* SRARCH INFO START */

.inner {
  margin-top: 24rpx;
  padding: 0 33rpx;
}

.search-inner {
  margin: 25rpx 0 10rpx;
  display: flex;
  line-height: 48rpx;
  align-items: center;
}

.s-left-arrow {
  flex: 0 0 1;
  width: 40rpx;
  height: 40rpx;
  margin-top: 15rpx;
}

.s-left-arrow .lef-icon {
  width: 16rpx;
  height: 25rpx;
}

.search-cont {
  margin: 0 24rpx 0 24rpx;
  flex: 0 0 1;
  width: 80%;
  box-sizing: border-box;
  position: relative;
}

.search {
  width: 100%;
  border-radius: 28px;
  height: 60rpx;
  padding-left: 80rpx;
  box-sizing: border-box;
  display: inline-block;
  font-size: 24rpx;
  position: relative;
}

.search_icon {
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  left: 45rpx;
  top: 30rpx;
}

.collect_tab {
  display: inline-block;
  vertical-align: middle;
  font-size: 28rpx;
  color: #151515;
  flex: 0 0 1;
}

/* CONTENT STAT */

.d-content {}

.d-c-list,
.d-c-desc {
  overflow: hidden;
  border-radius: 8rpx;
  background: #fff;
  margin-bottom: 26rpx;
}

.-desc-msg {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  margin: 24rpx 0;
  font-size: 30rpx;
  color: #686868;
}

.d-c-list {

}

.line {
  margin: 0 0 25rpx;
}

.c-list-portrait {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

.c-portrait-img {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
}

