/* 第二部分 */
.cOrTInfo-,
.cOrTInfo-option {
  font-weight: 600;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #151515;
}
.cOrTInfo-msg {
  font-size: 26rpx;
  margin-bottom: 20rpx;
  margin-left: 12rpx;
}
.cOrTInfo-2 {
  text-indent: 60rpx;
}
.cOrTInfo-cont .c-title {
  margin-top: 40rpx;
  border-top: 2rpx solid #f8f8f8;
  padding-top: 40rpx;
}

