/* 头部 */
.inner {
  background: #fff;
  margin-top: 127rpx;
  padding: 25rpx 30rpx;
}

.t-info-list {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.create-time {
  font-size: 24rpx;
  color: #999;
}

.f-bold {
  color: #262626;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  white-space: nowrap;
}

.-info-msg-exp {
  font-size: 26rpx;
  color: #999;
}

.show {
  position: absolute;
  top: 17rpx;
  left: 93rpx;
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  background-color: var(--themeColor);
  color: #fff;
  font-size: 20rpx;
  text-align: center;
}