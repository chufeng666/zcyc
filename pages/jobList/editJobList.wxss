}

.icon-iconcopy {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.por_img {
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
}

.ec_lianxiren {
  display: flex;
  align-items: center;
  padding: 33rpx 0;
  border-bottom: 1rpx solid #dedede;
}

.ec_top {
  display: flex;
