.user_header {
  display: flex;
  align-items: center;
  height: 56rpx;
  background-color: #FFE4CC;
  color: #FF730E;
}

.user_header .liaojie {
  flex: 18;
  text-align: center;
  font-size: 24rpx;
}

.user_header .icon-cha {
  flex: 1;
  font-size: 24rpx;
}

.inner {
  padding: 51rpx 53rpx;
  font-size: 28rpx;
  color: #151515;
  /* background: red */
}

.ec_logo {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 43rpx;
  border-bottom: 1px solid #dedede;
}

.touxiang {
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  font-weight: bold;
  color: #262626;
}

