}

.yiwanshan {
  font-size: 18rpx;
  margin-left: 12rpx;
  font-weight: normal;
  line-height: 28rpx;
  text-align: center;
  color: #fff;
  width: 68rpx;
  height: 28rpx;
  background-color: #FF730E;
  border-radius: 10rpx 5rpx 10rpx 0;
}

.jibenxinxi {
  display: flex;
  align-items: center;
}

.buwanzheng {
  font-size: 24rpx;
  color: #FF730E;
  margin-left: 12rpx;
