page {
  height: 100%;
  background: #fff;
}
/* 头部 */
.title_login {
  display: flex;
  align-items: center;
  margin-top: 64rpx;
  color: #999;
  padding: 0 16rpx;
}
.title_login .icon-zuojiantou {
  font-size: 60rpx;
}
.title_login .tl_denglu {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 7rpx;
}
/* 头部 */

/* logo */
.login_ear {
  position: relative;
  margin: 115rpx 129rpx 0 129rpx;
  font-size: 26rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-bottom: 1px solid #999;
  color: #999;
}
.xiaolian {
  width: 65rpx;
  height: 65rpx;
}
.welecom_title {
  font-size: 48rpx;
  padding: 0;
  font-weight: 550;
  margin-left: 25rpx;
}
/* logo */

.qianzui {
  display: inline-block;
  vertical-align: top;
  position: absolute;
  padding-bottom: 15rpx;
  bottom: 0rpx;
}

.phone_num {
  display: inline-block;
  font-size: 26rpx;
  vertical-align: top;
  margin-left: 28rpx;
  width: 300rpx;
  padding-bottom: 15rpx;
  position: absolute;
  bottom: 0rpx;
  left: 40rpx;
}
.phone_password {
  width: 300rpx;
  height: 56rpx;
  display: inline-block;
  margin-left: 68rpx;
}

.delete_pic {
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  right: 0;
  bottom: 23rpx;
}

.mima_ear {
  position: relative;
  margin: 20rpx 50rpx 0rpx 50rpx;
  font-size: 26rpx;
  border-bottom: 1px solid #999;
  padding-bottom: 17rpx;
  display: flex;
  color: #999;
  align-items: center;
  margin: 0 129rpx;
  margin-top: 42rpx;
}
.icon-yanzhengma {
  position: absolute;
  left: -6rpx;
  bottom: 0rpx;
  font-size: 46rpx;
  font-weight: 600;
}
.icon-lock-alt2 {
  position: absolute;
  left: 0;
  bottom: 13rpx;
  font-size: 36rpx;
}
.icon-yonghu {
  font-size: 36rpx;
}
.denglu {
  border-radius: 60rpx;
  color: white;
  text-align: center;
  line-height: 72rpx;
  width: 482rpx;
  height: 72rpx;
  margin-top: 109rpx;
}

.resigt {
  margin-left: 80rpx;
  font-size: 28rpx;
  color: #ff54b5;
  padding-top: 10rpx;
  display: inline-block;
  vertical-align: top;
  cursor: pointer;
}

.forget {
  margin-right: 80rpx;
  font-size: 28rpx;
  color: #ff54b5;
  padding-top: 10rpx;
  display: inline-block;
  vertical-align: top;
  float: right;
  cursor: pointer;
}
.eye_pic {
  width: 30rpx;
  height: 24rpx;
  position: absolute;
  right: 0;
  bottom: 23rpx;
}
.fasong {
  display: inline-block;
  vertical-align: top;
  height: 56rpx;
  width: 200rpx;
  line-height: 56rpx;
  color: #ff54b5;
  text-align: center;
  font-weight: bolder;
  letter-spacing: 2rpx;
}
.mask {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  background: black;
  opacity: 0.5;
  z-index: 1000000;
}
.mask_white_box {
  position: relative;
  bottom: 50%;
  left: 50%;
  transform: translate(-50%, 50%);
  width: 350rpx;
  height: 350rpx;
  background: white;
  border-radius: 10%;
  z-index: 8989898989898989;
}
.success_pic {
  position: absolute;
  top: 45%;
  left: 52%;
  transform: translate(-50%, -50%);
  width: 180rpx;
  height: 180rpx;
  background: white;
}
.mask_white_box text {
  position: absolute;
  bottom: 40rpx;
  width: 100%;
  text-align: center;
  color: #ff54b5;
  font-weight: bolder;
}
/* 下拉框的样式 */
.select_box {
  background: #fff;
  margin: 58rpx 130rpx 0 130rpx;
  position: relative;
}
.sb_shenfen {
  font-size: 24rpx;
  color: #313131;
  font-weight: 550;
}
.select {
  box-sizing: border-box;
  width: 100%;
  height: 70rpx;
  border-bottom: 1rpx solid #ff54b5;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}
.select_text {
  font-size: 30rpx;
  flex: 1;
}
.select_img {
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition: transform 0.3s;
}
.select_img_rotate {
  transform: rotate(180deg);
}
.option_box {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 45rpx;
}
.option {
  border: 2rpx solid #454547;
  padding: 4rpx 26rpx;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 40rpx;
}
.xiala_pic {
  width: 20rpx;
  height: 20rpx;
}
.active {
  color: #fff;
  background-color: var(--themeColor);
  border: none;
}
.active1 {
  color: var(--themeColor);
}
@import '../template//font.wxss';
