<!-- 头部搜索 -->
<view class='i-header'>
  <view class="h-left">筑城优才</view>
  <view class="h-bottom">
    <navigator url='../search/search' class='search-cont s-nosearch-wrap'>
      <view class='search search-nosearch company-bColor-1'>一级建造师</view>
      <image class="search-icon" src='../../../static/images/public/search_icon.png'></image>
    </navigator>
  </view>
  <view class="new">
    <navigator class="new_xiaoxi" url="../../information/information">
      <view class="n-lfet">
        消息
        <view>|</view>
      </view>
      <view class="n-right">著名企业今天新发布160个职业</view>
    </navigator>
  </view>
</view>
<!-- 头部搜索 -->
<!-- 搜寻部分 -->
<view class="newest-search">
  <view class="n-xiahuaxian">
    <view class="newest">
      <view wx:for="{{tabs}}" wx:key="id" data-index="{{index}}" bindtap="changeTitleByIndex" class="lively {{item.isActive?'active':''}}">
        {{item.title}}
      </view>
    </view>
    <view class="n-search">
      <view class="newsite_button {{showTST?'':'active'}}" bindtap="selectDistrict">
        <view class="newsite_view subtitle-msg" wx:if="{{showTST}}">地点</view>
        <view class="newsite_city ">{{areaInfo}}</view>
        <text class="iconfont icon-zhcc_xiangxiajiantou"></text>
      </view>
      <picker value="{{cat_id}}" range="{{jobArray}}" bindchange="jobChange" range-key="cat_name" range-value="cat_id">
        <view class="picker  subtitle-msg {{site_show?'active':''}}" data-id='{{jobArray[jobIndex].cat_id}}'>
          <view>{{jobArray[jobIndex].cat_name}}</view>
          <text class="iconfont icon-zhcc_xiangxiajiantou"></text>
        </view>
      </picker>
    </view>
  </view>
</view>
<!-- 搜寻部分 -->
<view class="n-information">
  <block class="n-zhaopinxinxi" wx:if="{{index===0}}">
    <navigator class="c_info" wx:for="{{list.person}}" wx:key="id" url="../../companyPostionDetail/companyPostionDetail?id={{item.id}}">
      <view class="i_list">
        <view class="l_yuan">{{item.job_type}}</view>
        <view class="l_price">6-7/月</view>
      </view>
      <view class="i_second">
        <view>人才</view>
        <view>{{item.images == 1 ? "无需证书":"需要证书"}}</view>
      </view>
      <view class="i_third">
        <view class="t_weizhi">广州 - 海珠区</view>
        <view class="t_zhili">{{item.work_age}}年</view>
        <view class="t_xueli">本科</view>
      </view>
      <view class="i_fourth">
        <image src='{{item.avatar}}' class="f_logo" />
        <view class="f_zhiwei">{{item.name}}</view>
      </view>
    </navigator>
  </block>
  <block class="n-zhaopinxinxi" wx:else>
    <navigator class="c_info" wx:for="{{list.recruit}}" wx:key="id" url="../../companyPostionDetail/companyPostionDetail?id={{item.id}}">
      <view class="i_list">
        <view class="l_yuan">{{item.title}}</view>
        <view class="l_price">{{item.salary}}/月</view>
      </view>
      <view class="i_second">
        <view>企业</view>
        <view>{{item.require_cert == 1 ? "无需证书":"需要证书"}}</view>
      </view>
      <view class="i_third">
        <view class="t_weizhi">广州 - 海珠区</view>
        <view class="t_zhili">{{item.work_age}}年</view>
        <view class="t_xueli">本科</view>
      </view>
      <view class="i_fourth">
        <image src='{{item.logo}}' class="f_logo" />
        <view class="f_zhiwei">项目经理●{{item.name}}</view>
        <view class="f_gongsi">[广州建材企业有限公司]</view>
      </view>
    </navigator>
  </block>
</view>
<address-form id='address' bind:tabEvent="tabEvent"></address-form>
<!-- 底部tabbar栏 -->
<import src="../../template/tabbar.wxml" />
<template is="tabBar" data="{{tabBar}}" />