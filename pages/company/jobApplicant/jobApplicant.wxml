<view class='i-header'>
  <view class="h-left">
    <navigator url="../index/index" class="iconfont icon-zuojiantou"></navigator>
    <view class="l_qiye">招人</view>
  </view>
  <view class="h-bottom">
    <image class="search-icon" src='../../../static/images/public/search_icon.png'></image>
    <input bindconfirm="bindconfirm" placeholder="请输入岗位" bindinput="handeSearchInput" class='search-nosearch'></input>
  </view>
</view>
<view class="newest-search">
  <view class="n-xiahuaxian">
    <view class="province" wx:if="{{city == '' && education ==''}}">
      <view class="dizhi">
        <text decode="{{true}}">公司地址&nbsp;&nbsp;/&nbsp;&nbsp;</text>
        <text decode="{{true}}">学历&nbsp;&nbsp;/&nbsp;&nbsp;</text>
        <text bindtap="selectOccupational">
          <text wx:if="{{showTST1}}">请选择岗位</text>
          <text wx:else>{{title}}/{{type}}</text>
        </text>
      </view>
    </view>
    <view class="province" wx:elif="{{education ==''}}">
      <view class="dizhi">
        <text decode="{{true}}">{{city}}-{{district}}&nbsp;&nbsp;/&nbsp;&nbsp;</text>
        <text decode="{{true}}">学历&nbsp;&nbsp;/&nbsp;&nbsp;</text>
        <text bindtap="selectOccupational">
          <text wx:if="{{showTST1}}">请选择岗位</text>
          <text wx:else>{{title}}/{{type}}</text>
        </text>
      </view>
    </view>
    <view class="province" wx:elif="{{city == ''}}">
      <view class="dizhi">
        <text decode="{{true}}">公司地址&nbsp;&nbsp;/&nbsp;&nbsp;</text>
        <text decode="{{true}}">{{education}}&nbsp;&nbsp;/&nbsp;&nbsp;</text>
        <text bindtap="selectOccupational">
          <text wx:if="{{showTST1}}">请选择岗位</text>
          <text wx:else>{{title}}/{{type}}</text>
        </text>
      </view>
    </view>
    <view class="province" wx:else>
      <view class="dizhi">
        <text decode="{{true}}">{{city}}-{{district}}&nbsp;&nbsp;/&nbsp;&nbsp;</text>
        <text decode="{{true}}">{{education}}&nbsp;&nbsp;/&nbsp;&nbsp;</text>
        <text bindtap="selectOccupational">
          <text wx:if="{{showTST1}}">请选择岗位</text>
          <text wx:else>{{title}}/{{type}}</text>
        </text>
      </view>
    </view>
    <view class="n-search">
      <view class="newsite_button active" bindtap="selectDistrict">
        <view class="newsite_view subtitle-msg  active">地点</view>
        <icon class="iconfont icon-zhcc_xiangxiajiantou"></icon>
      </view>
      <navigator url="../ScreeningConditions/ScreeningConditions" class="newsite_button active">
        <view class="newsite_view subtitle-msg  active">更多</view>
        <icon class="iconfont icon-zhcc_xiangxiajiantou"></icon>
      </navigator>
    </view>
  </view>
</view>
<view class="inner">
  <view class="zhanwushuju" wx:if="{{hiringData == ''}}">
    <image mode="aspectFit" src="/static/images/index/xiaochengxu_shengqiuye.png"></image>
  </view>
  <view wx:else class="container">
    <import src="../../template/companyJobSearch/companyJobSearch" />
    <template is="JobSearch" data="{{recList:hiringData,url:'../../companyPostionDetail/companyPostionDetail?id='}}" />
  </view>
</view>
<view style="height: 120rpx;">

</view>
<!-- 所有城市三级联动列表 -->
<address-form id='address' bind:tabEvent="tabEvent"></address-form>
<Occupational-form id='Occupational' bind:tabEvent1="tabEvent1"></Occupational-form>
<!-- 底部tabbar栏 -->
<import src="../../template/tabbar.wxml" />
<template is="tabBar" data="{{tabBar}}" />